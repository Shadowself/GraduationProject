<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popwindow_white">

    <TextView
        android:id="@+id/shareToFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/common_margin_5"
        android:text="@string/share_to_Wx"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/sep_line"></View>

    <TextView
        android:id="@+id/shareToCilcle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:paddingTop="@dimen/common_margin_5"
        android:text="@string/share_to_Friend"/>

</LinearLayout>