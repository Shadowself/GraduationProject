<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/place"
            style="@style/comm_TextView" />

        <TextView
            android:id="@+id/time"
            style="@style/comm_TextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin_10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/temperature_goods"
            style="@style/comm_TextView" />

        <TextView
            android:id="@+id/dampness_goods"
            style="@style/comm_TextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin_10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pestKind"
            style="@style/comm_TextView" />

        <TextView
            android:id="@+id/pestNumber"
            style="@style/comm_TextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin_10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            style="@style/comm_TextView"
            android:text="分析结果："/>

        <TextView
            android:id="@+id/testResult"
            style="@style/comm_TextView"
            android:layout_below="@+id/text"
             />
    </RelativeLayout>

</LinearLayout>