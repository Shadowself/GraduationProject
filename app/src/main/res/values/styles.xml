<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- Customize your theme here. -->
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/title_blue</item>
        <item name="colorAccent">@color/blue</item>

    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/common_size_120</item>
        <item name="android:layout_height">@dimen/common_size_48</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="comm_EditText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/bg_input_all</item>
        <item name="android:textColorHint">#99CCFF</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:saveEnabled">true</item>
    </style>

    <style name = "comm_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="storehouse_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/storehouse_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>
